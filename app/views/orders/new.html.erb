<div class="container">

  <div class="registration_form">
    <%= form_for(@order) do |f| %>
        <div class="field">
          <%= f.label "ФИО*" %><br>
          <%= f.text_field :name, size: 40 %>
        </div>
        <div class="field">
          <%= f.label "Адреc*" %><br>
          <%= f.text_area :address, rows: 3, cols: 40, size: 40 %>
        </div>
        <div class="field">
          <%= f.label 'email*' %><br>
          <%= f.email_field :email, size: 40 %>
        </div>
        <div class="field">
          <%= f.label "Телефон*" %><br>
          <%= f.text_field :phone, size: 40 %>
        </div>
        <div class="field">
          <%= f.label "Способ оплаты" %><br>
          <%= f.select :pay_type, Order::PAYMENT_TYPES,
              prompt: 'Выбор способа оплаты' %>
        </div>
        <div class="actions">
          <%= f.submit 'Сделать заказ' %>
        </div>
    <% end %>
  </div>
</div>

